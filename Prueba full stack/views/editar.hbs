<h2 align="center">editar el servicio</h2>

    <div class="row" align="center">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">

                    <form action="/auth/editar/{{data.id_servicios}}" method="POST">

                    <div class="form-group">
                        <input type="text" value="{{data.servicio}}" class="form-control"  name="servicio" placeholder="Nombre del usuario" required>
                    </div>
                    <br>

                    <div class="form-group">
                           <textarea type="text" class="form-control"  name="descripción"  required>{{data.descripción}}</textarea>
                    </div>
                       <br>

                       <div class="form-group">
                        <button class="btn btn-success btn-block ">
                            Editar
                        </button>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    {{#if message}}
    <h4 class="alert alert-danger mt-4"> {{message}}</h4>
    {{/if}}
</div>



