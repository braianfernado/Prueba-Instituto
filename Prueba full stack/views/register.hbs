    <br>
<h2 align="center">Agrega el usuario con su debido rol</h2>

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/auth/register" method="POST">

                    <div class="form-group">
                        <input type="text" class="form-control"  name="name" placeholder="Nombre del usuario" required>
                    </div>
                    <br>

                      <div class="form-group">
                        <input type="text" class="form-control"  name="surname" placeholder="Apellido del usuario" required>
                    </div>
                       <br>
                      <div class="form-group">
                        <input type="text" class="form-control" name="rol" placeholder="Rol del usuario" required>
                    </div>
                      <br>
                       <div class="form-group">
                        <button class="btn btn-success btn-block ">
                            Save
                        </button>
                    </div>
                    </form>
            
                </div>
            </div>
        </div>
    </div>
</div>

{{#if message}}
<h4> {{message}}</h4>
{{/if}}

</body>
</html>